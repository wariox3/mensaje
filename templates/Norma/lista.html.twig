{% extends 'base_admin.html.twig' %}

{% block content %}
    <div class="row">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}

        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                        <a href="#" class="fa fa-times"></a>
                    </div>
                    <h2 class="panel-title">Filtro de busqueda</h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-1 control-label">Nombre:</label>
                        <div class="col-sm-5">
                            {{ form_widget(form.nombre) }}
                        </div>
                        <label class="col-sm-1 control-label">Descripcion:</label>
                        <div class="col-sm-5">
                            {{ form_widget(form.descripcion) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label"></label>
                        <label class="col-sm-1 control-label">Codigo</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.codigo) }}
                            {{ form_errors(form.codigo) }}
                        </div>
                        <label class="col-sm-1 control-label">Derogado:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoDerogado) }}
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                        </div>
                    </div>
                </footer>
            </section>
        </div>

        <div class="col-md-12">
            <section class="panel">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-condensed table-bordered table-hover mb-none">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tipo</th>
                                <th>Numero</th>
                                <th title="Fecha de expedicion">Fecha Exp</th>
                                <th>Entidad</th>
                                <th>Jurisdiccion</th>
                                <th>Asunto</th>
                                <th title="Estado derogado">DER</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for arNorma in arNormas %}
                                <tr>
                                    <td>{{ arNorma.codigoNormaPk }}</td>
                                    <td>{{ arNorma.normaTipoNombre }}</td>
                                    <td>{{ arNorma.numero }}</td>
                                    <td>{{ arNorma.fecha | date('Y-m-d') }}</td>
                                    <td>{{ arNorma.entidadNombre }}</td>
                                    <td>{{ arNorma.jurisdiccionNombre }}</td>
                                    <td>{{ arNorma.descripcion }}</td>
                                    <td>{{ arNorma.estadoDerogado ? 'SI':'NO' }}</td>
                                    <td class="text-center">
                                        <a href="{{ path('norma_nuevo', { 'id': arNorma.codigoNormaPk }) }}">
                                            <i class="fa fa-edit fa-lg"></i>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a href="{{ path('norma_detalle', { 'id': arNorma.codigoNormaPk }) }}">
                                            <i class="fa fa-eye fa-lg"></i>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <input type="checkbox" name="ChkSeleccionar[]" value="{{ arNorma.codigoNormaPk }}"/>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3" >
                            <div style="float: right; margin-right: 5px !important;" class="btn-group" role="group" aria-label="...">
                                <a class="btn btn-sm btn-default"  href="{{ path('norma_nuevo', {'id': 0}) }}">Nuevo</a>
                                {{ form_widget(form.btnEliminar) }}
                            </div>
                        </div>
                    </div>
                </footer>
            </section>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>



{% endblock %}

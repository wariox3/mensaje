{% extends 'base_admin.html.twig' %}

{% block content %}
    <div class="row">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}

        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                    </div>
                    <h2 class="panel-title">Filtro de busqueda</h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-1 control-label">Id:</label>
                        <div class="col-sm-3">
                            {{ form_widget(form.clave) }}
                        </div>
                        <label class="col-sm-1 control-label">nombre:</label>
                        <div class="col-sm-3">
                            {{ form_widget(form.nombre) }}
                        </div>
                        <label class="col-sm-1 control-label">Grupo:</label>
                        <div class="col-sm-3">
                            {{ form_widget(form.Grupo) }}
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                        </div>
                    </div>
                </footer>
            </section>
        </div>

        <div class="col-md-12">
            <section class="panel">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-condensed table-bordered table-hover mb-none">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th title="relacionado con el grupo">grupo</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for arSubGrupo in arSubGrupos %}
                                <tr>
                                    <td>{{ arSubGrupo.codigoSubgrupoPk }}</td>
                                    <td>{{ arSubGrupo.nombre }}</td>
                                    <td>{{ arSubGrupo.grupoNombre }}</td>
                                    <td class="text-center">
                                        <a href="{{ path('subGrupo_nuevo', { 'id': arSubGrupo.codigoSubgrupoPk }) }}" title="editar nombre y grupo">
                                            <i class="fa fa-edit fa-lg"></i>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a href="{{ path('subGrupo_detalle', { 'id': arSubGrupo.codigoSubgrupoPk }) }}">
                                            <i class="fa fa-eye fa-lg"></i>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <input type="checkbox" name="ChkSeleccionar[]" value="{{ arSubGrupo.codigoSubgrupoPk }}"/>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div style="display: flex; flex-direction: row; align-items: center">
                            <span style="margin-right: 4px">registros: {{ arSubGrupos.getTotalItemCount }}</span>
                            {{ knp_pagination_render(arSubGrupos) }}
                        </div>
                    </div>
                </div>

                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3" >
                            <div style="float: right; margin-right: 5px !important;" class="btn-group" role="group" aria-label="...">
                                <a class="btn btn-sm btn-default"  href="{{ path('subGrupo_nuevo', {'id': 0}) }}">Nuevo</a>
                                {{ form_widget(form.btnEliminar) }}
                            </div>
                        </div>
                    </div>
                </footer>
            </section>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>



{% endblock %}
